#!@! shell functions
[[ $DEBUG ]] && echo $FILE

# -----------------------------------------------------------------------------
activate()
{
    . $HOME/venv/$1/bin/activate
}

# -----------------------------------------------------------------------------
csource()
{
   if [ -e $1 ]; then
      . $1
   fi
}

# -----------------------------------------------------------------------------
resource()
{
   $EDITOR ~/$1
   csource ~/$1
}
